<script>

function calcular() {
    var vlr = Number(valor.value);
if (vlr > 12) {
    msg.innerHTML = `O valor da sua conta foi de ${vlr * 2.5}`
} else {
    msg.innerHTML = `O valor da sua conta foi de ${vlr * 3}`
}
}
</script>
